            %li= link_to content_tag(:i, '', class: 'icon-ticket')+' My Estimates', user_ticket_estimates_path(user_id: current_user.id)
            %li= link_to content_tag(:i, '', class: 'icon-ticket')+' All Estimates', user_ticket_estimates_path
            %li= link_to content_tag(:i, '', class: 'icon-user')+' Users', users_path
